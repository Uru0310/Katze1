.header
  .header__main
    .header__main__title
      = link_to "Katze", root_path
    .header__main__sub
      - if user_signed_in?
        .header__main__sub__new
          = link_to "新規投稿", new_post_path
        .header__main__sub__signout
          = link_to "ログアウト", destroy_user_session_path, method: :delete
      - else
        .header__main__sub__signin
          = link_to "ログイン", new_user_session_path
        .header__main__sub__signup
          = link_to "新規登録", new_user_registration_path
.title
  .title-word
    投稿一覧
.post
  - @post.each do |post|
    .post__list
      = link_to post_path(post) do
        .post__list__img
          = attachment_image_tag post, :image
        .post__list__name
          = post.name
.div
  = paginate(@post)
